{
  "$id": "zendeskconnector",
  "$schema": "https://schema.yext.com/config/km/connector/v1",
  "displayName": "Zendesk Help Article Connector",
  "entityType": "yext/helpArticle",
  "mappings": [
    {
      "field": "yext/entityId",
      "header": "ID",
      "subfieldPath": []
    },
    {
      "field": "yext/landingPageUrl",
      "header": "URL",
      "subfieldPath": []
    },
    {
      "field": "yext/name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "yext/body",
      "header": "Body",
      "subfieldPath": []
    },
    {
      "field": "yext/keywords",
      "header": "Label Names",
      "subfieldPath": []
    },
    {
      "field": "yext/promoted",
      "header": "Promoted",
      "subfieldPath": []
    },
    {
      "field": "yext/voteCount",
      "header": "Vote Count",
      "subfieldPath": []
    },
    {
      "field": "yext/voteSum",
      "header": "Vote Sum",
      "subfieldPath": []
    }
  ],
  "source": {
    "baseSelector": {
      "header": "articles",
      "path": "articles",
      "type": "JSON"
    },
    "selectors": [
      {
        "header": "ID",
        "path": "id",
        "type": "JSON"
      },
      {
        "header": "URL",
        "path": "html_url",
        "type": "JSON"
      },
      {
        "header": "Name",
        "path": "name",
        "type": "JSON"
      },
      {
        "header": "Body",
        "path": "body",
        "type": "JSON"
      },
      {
        "header": "Label Names",
        "path": "label_names",
        "type": "JSON"
      }, 
      {
      	"header": "Promoted",
      	"path": "promoted",
      	"type": "JSON"
      }, 
      {
      	"header": "Vote Count",
      	"path": "vote_count",
      	"type": "JSON"
      }, 
      {
      	"header": "Vote Sum",
      	"path": "vote_sum",
      	"type": "JSON"
      }
    ],
    "sourceConfig": {
      "apiPullConfig": {
        "dataFormat": "JSON",
        "headers": {},
        "paginationControl": {
          "cursor": {
            "cursor": "next_page",
            "isUrl": true
          }
        },
        "queryParams": {},
        "requestType": "GET",
        "url": "https://${{km/connector.zendeskconnector.zendeskSubdomain}}.zendesk.com/api/v2/help_center/en-us/articles.json"
      }
    }
  }
}